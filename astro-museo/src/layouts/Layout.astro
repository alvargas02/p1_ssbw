---
import '../styles/global.css';
import Menu from '../components/Menu.tsx';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>
      {title ? `${title} | Museo Arqueológico` : 'Museo Arqueológico'}
    </title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50 text-gray-800">
    <header class="p-4 bg-white shadow flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <h1 class="text-2xl font-bold">
          <a href="/">Museo Arqueológico</a>
        </h1>
        <!-- Botones de autenticación -->
        <nav class="hidden md:flex gap-2">
          <a
            href="/usuarios/login"
            class="px-3 py-1 border border-blue-600 text-blue-600 rounded hover:bg-blue-50"
          >
            Login
          </a>
          <a
            href="/usuarios/registro"
            class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700"
          >
            Registrarse
          </a>
        </nav>
      </div>
      <!-- Menú hamburguesa para móvil -->
      <Menu client:load />
    </header>

    <main class="min-h-screen p-4">
      <slot />
    </main>

    <footer class="p-4 text-center text-sm text-gray-500">
      &copy; 2025 Museo Arqueológico
    </footer>
  </body>
</html>
