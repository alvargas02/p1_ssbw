{% extends "base.njk" %}

{% block title %}Resultados para “{{ termino }}”{% endblock %}

{# No hay hero aquí, se deja vacío #}
{% block hero %}{% endblock %}

{% block contenido %}
  <h1 class="title">Resultados para “{{ termino }}”</h1>

  {% if resultados.length === 0 %}
    <p>No se han encontrado coincidencias.</p>
  {% else %}
    <div class="columns is-multiline">
      {% for obra in resultados %}
        <div class="column is-one-third">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <img src="{{ obra.imagen }}" alt="{{ obra.titulo }}">
              </figure>
            </div>
            <div class="card-content">
              <p class="title is-4">{{ obra.titulo }}</p>
              <p class="subtitle is-6">{{ obra.procedencia }}</p>
              <div class="content">
                {{ obra.descripcion | truncate(150) }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  <p><a href="/">← Volver</a></p>
{% endblock %}
